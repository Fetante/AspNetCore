@model SignInViewModel;
@{
    ViewData["title"] = Model.Title;
}

<section id="signin">
    <div class="container">
        <form method="post" asp-controller="Auth" asp-action="SignIn" novalidate>
           <div>
               @Model.ErrorMessage
           </div>

            <h1>Welcome back</h1>
            <p>Don't have an account? <a asp-controller="Auth" asp-action="SignUp">Sign in here</a></p>

            <div class="content">
               
                <div id="form-email" class="input-group">
                    <label asp-for=Form.Email></label>
                    <span asp-validation-for=Form.Email></span>
                    <input asp-for=Form.Email />
                </div>

                <div id="form-password" class="input-group">
                    <label asp-for=Form.Password></label>
                    <span asp-validation-for=Form.Password></span>
                    <input asp-for=Form.Password />
                </div>               

                <div id="form-remember" class="checkbox-group">
                    <input asp-for=Form.RememberMe />
                    <label asp-for="Form.RememberMe"></label>
                </div>

                <button id="form-submit" class="btn-theme" type="submit">@Model.Title</button>

                <a id="form-forgot-password" asp-asp-controller="Account" asp-action="Forgot">Forgot you password</a>

            </div>


        </form>
    </div>
</section>
